"use strict";

var program = require("commander");
var when = require("when");

var util = require(__dirname + "/../lib/util");
var config = require(__dirname + "/../lib/config");
var admin = require(__dirname + "/../lib/admin");


program.on("--help", function () {
	console.log("  Usage:");
	console.log("");
	console.log("    $ cjdmaid-admin <command> [options]");
	console.log("");
	console.log("  Examples:");
	console.log("");
	console.log("    $ cjdmaid-admin ping");
	console.log("    $ cjdmaid-admin functions");
});

program.parse(process.argv);

var adminCopy = new admin();
var session;

when(
	config.readJson(util.expanduser("~/.cjdnsadmin"))
)
.then(function (data) {
	return adminCopy.connect(data.addr, data.port, data.password);
})
.then(function (sess) {
	session = sess;
	var funcName = process.argv[2];
	var args = process.argv.splice(3);

	if (typeof session.constructor.prototype[funcName] === "undefined") {
		console.log("No such function");
		session.disconnect();
		return when.reject();
	}

	return session[funcName].apply(session, args);
})
.then(function (data) {
	console.log(data);
	if (typeof data.streamId !== "undefined" && data.error === "none") {
		return (function () {
			var deferred = when.defer();
			process.on("SIGINT", function () {
				deferred.resolve();
			});
			return deferred.promise;
		})();
	}
	return;
})
.yield(
	session.disconnect()
)
.otherwise(function (err) {
	if (err) {
		return util.panic(err);
	}
});
